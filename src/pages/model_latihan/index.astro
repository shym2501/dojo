<Page title="Model Latihan">
  
  <div class="flex flex-col bg-white shadow-md rounded-xl px-4 py-6 my-5 mx-4 overflow-y-auto gap-4">
    <span class="mx-2 font-semibold text-xl text-slate-700 -mb-2">Video Pengantar</span>
    <div class="flex flex-col bg-white shadow-md rounded-2xl gap-2 bg-cover">
      <iframe title="Youtube" class="w-full rounded-2xl" height="200" src="https://www.youtube.com/embed/Gifm7ZTogXI" allow="encrypted-media" allowfullscreen></iframe>
    </div>
    
    <span class="mx-2 font-semibold text-xl text-slate-700 -mb-2 mt-1">Materi</span>
    
    <div class="hs-accordion-group">
      <div class="hs-accordion mb-4 border-gray-200 bg-white hs-accordion-active:bg-gray-100 border border-2 hs-accordion-active:border-0 hs-accordion-active:shadow-md rounded-xl" id="hs-active-bordered-heading-one">
        <button class="hs-accordion-toggle hs-accordion-active:text-blue-800 inline-flex items-center w-full font-semibold text-start text-slate-700 py-3 px-4 hover:text-blue-600 disabled:opacity-50 disabled:pointer-events-none" aria-controls="hs-basic-active-bordered-collapse-one">
